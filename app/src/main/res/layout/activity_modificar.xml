<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ModificarActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modificar Medicamento"
        android:textSize="25dp"
        android:layout_margin="35dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#224FD5"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txtIdM"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Ingrese ID"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:inputType="number"
            />
        <Button
            android:id="@+id/btnBuscarM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="#3060DC"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Buscar"
            android:onClick="onclick"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/txtNombreM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del medicamento"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:inputType="textPersonName"
        />
    <EditText
        android:id="@+id/txtCantidadM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cantidad"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:inputType="number"
        />
    <EditText
        android:id="@+id/txtPrecioM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Precio"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:inputType="numberDecimal"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/txtFechaM"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Fecha de Vencimiento"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:inputType="date"
            />
        <ImageButton
            android:id="@+id/imgFechaM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/date_24dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:onClick="onclick"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btnModificarMed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Modificar"
        android:background="#3060DC"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:onClick="onclick"
        />


</LinearLayout>